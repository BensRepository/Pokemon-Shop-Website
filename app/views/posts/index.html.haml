%h2= t('.title')
%h4= t('.description')
%title= t('.title')
= form_for "",url: posts_path, role: "search", method: :get do
  = text_field_tag :search, @search_term,placeholder: "Search..."

%table{:cellpadding => "0", :cellspacing => "0"}
#striped2
  .striped
    %table{:style => "width:100%"}

      %thead
        %tr
          %th Title
          %th Author
          %th Date
          %th
          %th
          %th

      %tbody
        - @posts.each do |post|
          %tr
            %td= post.title
            %td= post.author
            %td= post.date
            %td= link_to 'Read', post
            -if post.user == current_user
              %td= link_to 'Edit post', edit_post_path(post)
              %td= link_to 'Delete post', post, method: :delete, data: { confirm: 'Are you sure?' }


    %br

    %h3= link_to t('.new'), new_post_path
